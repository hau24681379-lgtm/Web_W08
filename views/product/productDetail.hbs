<div class="row">
    <div class="col-12 col-md-5">
        <div class="product-img-frame ratio ratio-1x1 bg-white p-4 rounded shadow-sm">
            <img src="/imgs/p{{product.id}}.png" class="img-fluid" alt="{{product.title}}">
        </div>
    </div>
    <div class="col-12 col-md-7 ps-md-5 pt-4 pt-md-0">
        <h2 class="mb-3 text-primary">{{product.title}}</h2>
        <p class="text-muted mb-2">{{product.category}}</p>
        <hr class="my-3">
        <p class="mb-4">{{product.description}}</p>
        <h3 class="text-danger mt-4 mb-3">Price: ${{product.price}}</h3> 
        <p class="text-secondary small mb-4">Satisfaction Guaranteed. Return or exchange any order within 30 days.</p>
        <button class="btn btn-success btn-lg">Add to Cart</button> 
    </div>
</div>